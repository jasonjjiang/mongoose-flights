<%- include('../partials/header') %>
<h2>List of Flights</h2>
<table >
  <thead>
    <tr>
      <th>Airline</th>
      <th>Departure Airport</th>
      <th>Flight Number</th>
      <th>Departure Date & Time</th>
    </tr>
  </thead>
  <tbody class="info">
    <% flights.forEach(function(f) { %>
      <tr>
        <td><%= f.airline %></td>
        <td><%= f.airport %></td>
        <td><%= f.flightNo %></td>
        <td><%= f.departs %></td>
        <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  
<%- include('../partials/footer') %>